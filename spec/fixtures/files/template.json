{
  "apiVersion": "v1",
  "kind": "Template",
  "metadata": {
    "annotations": {
      "description": "OCP kubevirt linux, template",
      "tags": "kubevirt,ocp,template,linux"
    },
    "clusterName": "",
    "creationTimestamp": "2018-01-24T10:15:25Z",
    "labels": {
      "miq.github.io/kubevirt-is-vm-template": "true",
      "miq.github.io/kubevirt-os": "rhel-7"
    },
    "name": "example",
    "namespace": "default",
    "resourceVersion": "262502",
    "selfLink": "/apis/kubevirt.io/v1alpha1/namespaces/default/templates/test",
    "uid": "7e6fb1ac-00ef-11e8-8840-525400b2cba8"
  },
  "objects": [
    {
      "apiVersion": "kubevirt.io/v1alpha1",
      "kind": "OfflineVirtualMachine",
      "metadata": {
        "name": "${NAME}",
      },
      "spec": {
        "template": {
          "spec": {
            "domain": {
              "cpu": {
                "cores": "4"
              },
              "devices": {
                "disks": [
                  {
                    "disk": {
                      "dev": "vda"
                    },
                    "name": "disk0",
                    "volumeName": "disk0-pvc"
                  }
                ]
              },
              "machine": {
                "type": "q35"
              },
              "resources": {
                "requests": {
                  "memory": "4096Mi"
                }
              }
            },
            "volumes": [
              {
                "name": "disk0-pvc",
                "persistentVolumeClaim": {
                  "claimName": "linux-vm-pvc-test"
                }
              }
            ]
          }
        }
      }
    },
    {
      "apiVersion": "v1",
      "kind": "PersistentVolumeClaim",
      "metadata": {
        "name": "linux-vm-pvc-${NAME}",
      },
      "spec": {
        "accessModes": [
          "ReadWriteOnce"
        ],
        "resources": {
          "requests": {
            "storage": "10Gi",
          }
        }
      }
    }
  ],
  "parameters": [
    {
      "name": "NAME",
      "description": "Name for the new VM",
    },
    {
      "name": "MEMORY",
      "description": "Amount of memory in MB",
      "value": "4096Mi"
    },
    {
      "name": "CPU_CORES",
      "description": "Amount of cores",
      "value": "4"
    }
  ]
}
